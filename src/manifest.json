{
  "manifest_version": 3,
  "name": "One-Click Outreach",
  "version": "1.0.0",
  "description": "Generate personalized outreach emails from LinkedIn profiles and webpages using AI",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "*://www.linkedin.com/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content/linkedin.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*/*"],
      "js": ["content/generic.js"],
      "run_at": "document_end",
      "exclude_matches": ["*://www.linkedin.com/*"]
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "One-Click Outreach"
  },
  
  "options_page": "options/options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["content/*"],
      "matches": ["*://*/*"]
    }
  ]
}