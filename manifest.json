{
  "manifest_version": 3,
  "name": "One-Click Outreach",
  "version": "1.0.0",
  "description": "Generate personalized outreach emails from LinkedIn profiles and webpages using AI",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "*://www.linkedin.com/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["src/content/linkedin.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*/*"],
      "js": ["src/content/generic.js"],
      "run_at": "document_end",
      "exclude_matches": ["*://www.linkedin.com/*"]
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "One-Click Outreach",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "src/options/options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["src/content/*"],
      "matches": ["*://*/*"]
    }
  ]
}